{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"@modules/*": ["modules/*"],
			"@shared/*": ["shared/*"],
			"@errors/*": ["errors/*"]
		},
		"outDir": "./dist",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
