{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"rootDir": "./",
		"baseUrl": "./",
		"paths": {
			"@modules/*": ["src/modules/*"],
			"@shared/*": ["src/shared/*"],
			"@errors/*": ["src/errors/*"]
		},
		"outDir": "./dist",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
